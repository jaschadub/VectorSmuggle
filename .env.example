# Example environment configuration for VectorSmuggle

# OpenAI API key for embeddings and queries
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI model configurations
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_LLM_MODEL=gpt-3.5-turbo-instruct

# Vector store type: faiss, qdrant, or pinecone
VECTOR_DB=qdrant

# Document processing settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
DOCUMENT_PATH=../internal_docs/strategic_roadmap.pdf

# Multi-format document support
BATCH_PROCESSING=true
MAX_FILES_PER_BATCH=10
ENABLE_PREPROCESSING=true
SANITIZE_CONTENT=false
DETECT_SENSITIVE_DATA=true
CHUNKING_STRATEGY=auto

# Format-specific settings
OFFICE_EXTRACT_TABLES=true
CSV_DELIMITER=auto
JSON_FLATTEN_NESTED=false
EMAIL_INCLUDE_ATTACHMENTS=true
DATABASE_QUERY=

# FAISS settings
FAISS_INDEX_PATH=faiss_index

# Qdrant settings (only if using qdrant)
QDRANT_URL=http://localhost:6333

# Pinecone settings (only if using pinecone)
PINECONE_API_KEY=pinecone-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PINECONE_ENVIRONMENT=us-west1-gcp

# Collection/Index naming
COLLECTION_NAME=rag-exfil-poc
INDEX_NAME=rag-exfil-poc

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Steganography settings
STEGO_ENABLED=true
STEGO_NOISE_LEVEL=0.01
STEGO_ROTATION_ANGLE=0.1
STEGO_SCALING_FACTOR=0.95
STEGO_OFFSET_RANGE=0.05
STEGO_FRAGMENT_SIZE=128
STEGO_INTERLEAVE_RATIO=0.3
STEGO_DECOY_RATIO=0.4
STEGO_BASE_DELAY=60.0
STEGO_DELAY_VARIANCE=0.3
STEGO_BATCH_SIZE=5
STEGO_MAX_BATCHES_PER_HOUR=10
STEGO_BUSINESS_HOURS_ONLY=true
STEGO_TIMEZONE_OFFSET=0
STEGO_FRAGMENT_STRATEGY=round_robin
STEGO_DECOY_CATEGORY=general
STEGO_TECHNIQUES=noise,rotation,scaling,offset,fragmentation,interleaving

# Advanced Evasion Settings
EVASION_TRAFFIC_MIMICRY=true
EVASION_BASE_QUERY_INTERVAL=300.0
EVASION_QUERY_VARIANCE=0.4
EVASION_BURST_PROBABILITY=0.15
EVASION_USER_PROFILES=researcher,analyst,developer,manager

# Behavioral Camouflage
EVASION_BEHAVIORAL_CAMOUFLAGE=true
EVASION_LEGITIMATE_RATIO=0.8
EVASION_MIXING_STRATEGY=interleaved
EVASION_COVER_STORY=true

# Network Evasion
EVASION_NETWORK=true
EVASION_PROXY_ROTATION=false
EVASION_USER_AGENT_ROTATION=true
EVASION_RATE_LIMIT_DELAY=1.0,5.0
EVASION_CONNECTION_TIMEOUT=30.0
EVASION_MAX_RETRIES=3

# Operational Security
EVASION_OPSEC=true
EVASION_AUTO_CLEANUP=true
EVASION_LOG_RETENTION_HOURS=24
EVASION_SECURE_DELETE_PASSES=3
EVASION_TEMP_DIR=

# Detection Avoidance
EVASION_DETECTION_AVOIDANCE=true
EVASION_DLP_AVOIDANCE=true
EVASION_TRANSFORMATION_STRENGTH=0.3
EVASION_STATISTICAL_NOISE=0.1
EVASION_SIGNATURE_OBFUSCATION=true

# Query Enhancement Settings
QUERY_CACHE_ENABLED=true
QUERY_CACHE_DIR=.query_cache
QUERY_CACHE_MAX_SIZE=1000
QUERY_BATCH_SIZE=10
QUERY_SIMILARITY_THRESHOLD=0.7
QUERY_ADAPTIVE_RETRIEVAL=true
QUERY_PERFORMANCE_TRACKING=true

# Advanced Query Features
QUERY_MULTI_STEP_REASONING=true
QUERY_CONTEXT_RECONSTRUCTION=true
QUERY_CROSS_REFERENCE_ANALYSIS=true
QUERY_DATA_RECOVERY=true
QUERY_SEMANTIC_CLUSTERING=true
QUERY_ENTITY_EXTRACTION=true

# Query Optimization Parameters
QUERY_EMBEDDING_CACHE_SIZE=5000
QUERY_RESULT_RANKING=true
QUERY_EXPANSION_ENABLED=true
QUERY_STRATEGY_RECOMMENDATION=true
